 #include <tos.h>

int16_t fast_read_config_word (int32_t handle, uint8_t reg);
!item [Assembler:]
!begin_verbatim
move.b    reg,-(sp)     ; Offset 6
move.l    handle,-(sp)  ; Offset 2
