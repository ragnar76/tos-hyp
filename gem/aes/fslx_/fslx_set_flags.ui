!item [C:]
int16_t fslx_set_flags ( int16_t flags, int16_t *oldval );

!item [Binding:]
!begin_verbatim
int16_t fslx_set_flags ( int16_t flags, int16_t *oldval )
{
   int_in[0] = 0;
   int_in[1] = flags;

   crys_if (195);

   *oldval = int_out[1];
   return ( int_out[0] );
}
!end_verbatim

