!item [Binding:]
!begin_verbatim
int16_t edit_get_font ( OBJECT *tree, int16_t obj,
                        int16_t *fontID, int16_t *fontH,
                        int16_t *fontPix, int16_t *mono )
{
   int_in[0]  = obj;
   int_in[1]  = 3;      /* Sub-opcode for function */

   addr_in[0] = tree;

   int_out[4] = 0;      /* for old SLB         */
   
   crys_if( 216 );

   *fontID  = int_out[1];
   *fontH   = int_out[2];
   *mono    = int_out[3];
   *fontPix = int_out[4];

   return ( int_out[0] );
}
