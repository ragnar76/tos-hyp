!item [Binding:]
!begin_verbatim
int16_t wdlg_get_edit ( DIALOG *dialog, int16_t *cursor )
{
   addr_in[0] = dialog;

   int_in[0] = 1;

   int_out[1] = -1;

   crys_if (164);

   *cursor = int_out[1];

   return ( int_out[0] );
}
