void v_circle (int16_t handle, int16_t x, int16_t y,
               int16_t radius)
{
   ptsin[0]  = x;
   ptsin[1]  = y;
   ptsin[2]  = 0;
   ptsin[3]  = 0; 
   ptsin[4]  = radius;
