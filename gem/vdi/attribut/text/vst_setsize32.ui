!item [Binding:]
!begin_verbatim
fix31 vst_setsize32 (int16_t handle, fix31 point,
                     int16_t *chwd, int16_t *chht,
                     int16_t *cellwd, int16_t *cellht)
{
   intin[0..1] = point;

   contrl[0] = 252;
   contrl[1] = 0;
   contrl[3] = 2;
   contrl[6] = handle;

   vdi ();

   *chwd   = ptsout[0];
   *chht   = ptsout[1];
   *cellwd = ptsout[2];
   *cellht = ptsout[3];

   return ( intout[0..1] );
}
!end_verbatim

