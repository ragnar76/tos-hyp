!item [Binding:]
!begin_verbatim
int16_t vqt_xfntinfo (int16_t handle, int16_t flags,
                      int16_t id, int16_t index,
                      XFNT_INFO *info)
{
   intin[0] = flags;
   intin[1] = id;
   intin[2] = index;
   intin[3..4] = info;

   contrl[0] = 229;
   contrl[1] = 0;
   contrl[3] = 5;
   contrl[5] = 0;
   contrl[6] = handle;

   vdi ();

   return ( intout[1] );
}
