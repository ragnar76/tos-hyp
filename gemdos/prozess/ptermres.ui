!ignore_index
(!begin_liste) [Assembler:]
!item [C:]
void Ptermres ( int32_t keepcnt, int16_t retcode );

!item [Assembler:]
!begin_verbatim
move.w    retcode,-(sp)  ; Offset 6
move.l    keepcnt,-(sp)  ; Offset 2
move.w    #49,-(sp)      ; Offset 0
